@model IEnumerable<WebApp1.Models.IndexViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="row top_tiles">
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-building "></i></div>
                    <div class="count">@ViewData["num_assets"]</div>
                    <h3>Number of Assets</h3>
                </div>
            </div>
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-users"></i></div>
                    <div class="count">@ViewData["num_tenants"]</div>
                    <h3>Number of Tenants</h3>
                </div>
            </div>
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-home"></i></div>
                    <div class="count">@ViewData["num_allocated"]</div>
                    <h3>Occupied Assets</h3>
                </div>
            </div>
            <div class="animated flipInY col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="tile-stats">
                    <div class="icon"><i class="fa fa-money"></i></div>
                    <div class="count">@ViewData["num_paymentsdue"]</div>
                    <h3>Payments due</h3>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Expiring Rents <small></small></h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @{int i = 0;
                            @foreach (var a in @Model.ToArray())
                            {
                                if (a.Exp_State =="0"|| a.Exp_State=="1")
                                {
                                    <article class="media event">
                                        <a class="pull-left date">
                                            <p class="month"></p>
                                            <p class="day">@i</p>
                                        </a>
                                        <div class="media-body">
                                            <a class="title" href="#"></a>
                                            <p>Expiring Date: @a.Date</p>
                                            <p>Asset Owner: @a.AssetName</p>
                                            <p>Tenant Name: @a.TenantName</p>
                                        </div>
                                    </article>
                                    i++;
                                }
                            }}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Expired Rents</h2>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        @{int j = 0;
                            @foreach (var a in @Model.ToArray())
                            {
                                if (a.Exp_State == "-1")
                                {
                                    <article class="media event">
                                        <a class="pull-left date">
                                            <p class="month"></p>
                                            <p class="day">@j</p>
                                        </a>
                                        <div class="media-body">
                                            <a class="title" href="#"></a>
                                            <p>Expired Date: @a.Date</p>
                                            <p>Asset Owner:@a.AssetName</p>
                                            <p>Tenant Name: @a.TenantName</p>
                                        </div>
                                    </article>
                                    j++;
                                }
                            }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->
